<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.MainActivityFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/select_random_trail_button"
            android:drawableTop="@drawable/hiker"
            android:text="@string/find_me_a_trail"
            style="@style/trail_finder_button_style"
            tools:text="@string/find_me_a_trail" />

        <Button
            android:id="@+id/select_trail_list_button"
            android:drawableTop="@drawable/map"
            android:layout_marginStart="@dimen/button_margin_horizontal"
            android:text="@string/let_me_choose"
            style="@style/trail_finder_button_style"
            tools:text="@string/let_me_choose" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>