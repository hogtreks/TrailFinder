<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="first.project.android.trailfinder.ui.main.MainActivityFragment">

    <Button
        android:id="@+id/select_random_trail_button"
        style="@style/trail_finder_button_style"
        android:drawableTop="@drawable/hiker"
        android:text="@string/find_me_a_trail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        tools:text="@string/find_me_a_trail" />

    <Button
        android:id="@+id/select_trail_list_button"
        style="@style/trail_finder_button_style"
        android:drawableTop="@drawable/map"
        android:text="@string/let_me_choose"
        app:layout_constraintStart_toStartOf="@+id/select_random_trail_button"
        app:layout_constraintTop_toBottomOf="@+id/select_random_trail_button"
        tools:text="@string/let_me_choose" />

</androidx.constraintlayout.widget.ConstraintLayout>