<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#64ba69"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/appwidget_textview_trail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#64ba69"
        android:text="@string/appwidget_default_text"
        android:textColor="#795548"
        android:textSize="24sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/appwidget_textview_trail_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#64ba69"
        android:textColor="#795548"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:layout_below="@id/appwidget_textview_trail_name"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>