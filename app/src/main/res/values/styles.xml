<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">?themePrimary</item>
        <item name="colorPrimaryDark">?themePrimaryDark</item>
        <item name="colorAccent">?themeAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ExpandedAppBar" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="AppTheme.NoActionBar.Forest">
        <item name="themePrimary">@color/colorGreen</item>
        <item name="themePrimaryDark">@color/colorGreenDark</item>
        <item name="themePrimaryLight">@color/colorGreenLight</item>
        <item name="themeAccent">@color/colorBlue</item>
        <item name="themeButtonIconColor">@color/colorBrown</item>
        <item name="themeButtonTextColor">@color/colorBrown</item>
        <item name="themeContentBackground">@color/colorBrownLight</item>
        <item name="themeContentBackgroundLight">@color/colorBrownExtraLight</item>
        <item name="themeTextViewTextColorLight">@color/colorBrown</item>
        <item name="themeTextViewTextColorDark">@color/colorBrownDark</item>
    </style>

    <style name="trail_finder_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/button_margin_vertical</item>
        <item name="android:background">@drawable/rounded_corners_button</item>
        <item name="android:textColor">?attr/themeButtonTextColor</item>
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="about_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="about_textview_info_style" parent="@style/about_textview_style">
        <item name="android:paddingStart">@dimen/about_textview_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/about_textview_horizontal_padding</item>
    </style>

    <style name="trail_detail_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/trail_detail_textview_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/trail_detail_textview_vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/trail_detail_textview_horizontal_margin</item>
    </style>

    <style name="trail_detail_textview_info_style" parent="@style/trail_detail_textview_style">
        <item name="android:textSize">@dimen/trail_detail_textview_trail_info_text_size</item>
        <item name="android:textColor">?attr/themeTextViewTextColorDark</item>
    </style>

</resources>
